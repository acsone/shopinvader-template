{% if auth_invalid_entry %}
<div class="alert alert-danger">
  {% editable_text "register_error", label: "Register error", format: "html" %}
    <div class="h3">Something went wrong</div>
    <p>Please check input form and try again</p>
  {% endeditable_text %}
</div>
{% endif %}
<div class="card  shadow-sm">
  <div class="card-body">

    <div class="form-group row">
      <label for="auth-email" class="col-12 col-sm-3 col-form-label text-sm-right">
        {{ 'signin_email' | translate }}
      </label>
      <div class="col-12 col-sm-8">
        <input type="email" class="form-control" name="email" id="email"  placeholder="{{ 'signin_email' | translate }}" required="required">
      </div>
    </div>
  </div>
</div>
<div class="card  shadow-sm">
  <div class="card-body">
    {% include 'address_form' with
      with_require: true,
      input_group: '',
      address: params
    %}
    <div class="form-group ">
      <div class="form-check">
        <label class="form-check-label">
          <input class="form-check-input" type="checkbox"  name="opt_in" autocomplete="off">
          {% editable_text "signup_newsletter_label", label: "Signup newsletter label", format: "html" %}
            Tick here if you want to receive informations and offers about products and services by email.
          {% endeditable_text %}
        </label>
      </div>
    </div>
    <div class="text-right">
      <button type="submit" name="button" class="btn btn-primary pull-right">
        <i class="fa fa-check"></i> {{ 'guest_info_submit' | translate }}
      </button>
    </div>
  </div>
</div>
